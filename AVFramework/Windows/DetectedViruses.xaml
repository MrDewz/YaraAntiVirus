<Window x:Class="AVFramework.Windows.DetectedViruses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVFramework.Windows"
        mc:Ignorable="d"
        Title="DetectedViruses" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Вирусы"></TextBlock>
            </StackPanel>
            <StackPanel>
                <ListBox x:Name="VirusesLB" Height="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}"></TextBlock>
                                <Button Style="{StaticResource RoundButton}">Удалить</Button>
                                <Button Style="{StaticResource RoundButton}">Оставить</Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
